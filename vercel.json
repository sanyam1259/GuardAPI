{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/ui/(.*)",
        "dest": "app.py"
      }
    ],
    "scripts": {
         "build": "echo 'Running custom build script' && python3 -m pip install -r requirements.txt",
         "postbuild": "echo 'Running post-build script'"
     }
  }
  
